<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" type="text/css" media="screen" href="/stylesheets/admin-panel.css" />

</head>
<body>
    <% include header %>
    <div id="content" class="form-container">
        <div class="admin-header">
                <h2>
                    <%= user %>'sAdmin Page
                </h2>
                        <button id="new-page-btn">
                            New Page
                        </button>

                
                <hr/>
        </div>
        <div class="admin-content">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>
                            Page Name
                        </th>
                        <th>
                            Updated
                        </th>
                        <th>
                            Options
                        </th>
                    </tr>
                </thead>
                <!-- dumby data -->
                <tbody>
                        <% for(var i=0; i < pageList.length; i++) { %>
                            <tr>

                                <td class="page-title">
                                    <a href="/<%= pageList[i].url %>"><%= pageList[i].title %></a>
                                </td>
                                <td class ="date"><time datetime="<%= pageList[i].date %>"> <%= pageList[i].date%> </time></td>
                                <td>

                                    <form class="button-form" method="get" action="/edit-page/update-page">
                                        <input type="hidden" value="<%= pageList[i]._id %>" name="id"/>
                                        <button class="icon-button" type="submit">
                                            <img class="icon" src="\images\icons\003-edit.svg" alt="Edit Page">
                                        </button>
                                    </form>

                                    <button class="delete-button icon-button" page-id-data="<%= pageList[i]._id %>">
                                        <img class="icon" src="\images\icons\001-cancel-button.svg" alt="Delete Page">
                                    </button>

                                
                                    <button class="view-button view icon-button" page-id-data="<%= pageList[i]._id %>" page-visible-data="<%= !pageList[i].visible %>" type="submit">
                                        <div class="icon-container icon"></div>
                                    </button>
                                
                                </td>
                            </tr>
                         <% } %>
                </tbody>
            </table>    

        </div>



<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <p>Some text in the Modal..</p>
  </div>

</div>

    </div>
 <script src="/js/admin-panel.js"></script>
    <% include footer %>
    
</body>
</html>